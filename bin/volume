#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pamixer -t ;;
	4) pamixer --allow-boost -i 5; notify-send "Volume `pamixer --get-volume`" -h int:value:$(( 100 * $(pamixer --get-volume) / 150 )) -t 700 -r 2 ;;
	5) pamixer --allow-boost -d 5; notify-send "Volume `pamixer --get-volume`" -h int:value:$(( 100 * $(pamixer --get-volume) / 150 )) -t 700 -r 2 ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pamixer --get-mute) = true ] && echo ðŸ”‡ && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -gt "30" ]; then
	icon="ðŸ”‰"
elif [ "$vol" -gt "0" ]; then
	icon="ðŸ”ˆ"
else
        echo ðŸ”‡ && exit
fi

echo "$icon $vol%"
#echo -e "\e[42m$icon $vol%\e[0m"
